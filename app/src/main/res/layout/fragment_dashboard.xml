<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/authorFirstImage"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent" />

<Button
    android:id="@+id/button_search"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="1"
    android:onClick="button_click"
    android:text="@string/dashboard_fragment_search"
    android:background="@drawable/boton"
    android:textColor="@color/buttoncolors" />

<Button
    android:id="@+id/button_friends"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layout_weight="1"
    android:onClick="button_click"
    android:text="@string/dashboard_fragment_friends"
    android:background="@drawable/boton"
    android:textColor="@color/buttoncolors" />

<Button
    android:id="@+id/button_favourite"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:onClick="button_click"
    android:text="@string/dashboard_fragment_fav"
    android:background="@drawable/boton"
    android:textColor="@color/buttoncolors" />
</LinearLayout>